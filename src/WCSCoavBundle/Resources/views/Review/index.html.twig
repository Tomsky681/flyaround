{% extends "::base.html.twig" %}

{% block title %}WCSCoavBundle:Review:index{% endblock %}

{% block body %}
<h1>Welcome to the Review:index page</h1>
{% for review in reviews %}
    <ul>
        <li>
            Review's id: {{ review.id }}
            [
                <a href="{{ path('review_show', { 'id': review.id }) }}">Voir</a> -
                <a href="{{ path('review_edit', { 'id': review.id }) }}">Éditer</a> -
                <a href="{{ path('review_delete', { 'id': review.id }) }}">Supprimer</a>
            ]
        </li>
        <li>Review's text: {{ review.text }}</li>
        <li>Review's user rated: {{ review.userRated }}</li>
        <li>Review's note: {{ review.note }}</li>
        <li>Review's author: {{ review.reviewAuthor }}</li>
        <li>Review's publicationDate: {{ review.publicationDate | date('Y m d') }}</li>
    </ul>
{% endfor %}
<ul>
    <li><a href="{{ path("review_new") }}">Créer un nouvel avis</li>
</ul>
{% endblock %}
